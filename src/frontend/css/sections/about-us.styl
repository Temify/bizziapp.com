.about-us
  width 100%
  background-color $color-about-us-bg

  .container
    min-height 435px
    background-size cover
    background-position 10% 0
    align-items center
    padding-top 70px
    padding-bottom 84px

    .about-us__title
      font-weight $weight-bold
      font-size 58px
      color white
      margin-top 0
      margin-bottom 20px

    .about-us__article
      max-width 771px
      width 100%
      font-weight $weight-light
      font-size 15px
      color white
      line-height 28px
      text-align center

      @media screen and (max-width $screen-sm-max)
        padding 0 15px