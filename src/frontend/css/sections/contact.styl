.contact
	width 100%
	background-color $color-bg-contact
	font-weight $weight-light
	position relative

	.container
		min-height 573px
		height 100%
		width 100%
		background-size cover
		align-items center
		padding-top 84px
		padding-bottom 69px

		@media $screen-sm-max
			background-position 70% 0

		@media $screen-xs-max
			padding 84px 15px 69px

	&__title
		font-size 58px
		font-weight $weight-bold
		color white
		text-align center
		max-width 741px
		width 100%
		margin-top 0

		@media $md-up
			line-height 70px

		@media $screen-xs-max
			font-size 33px
			max-width 600px

	&__form
		display flex
		flex-flow row wrap
		justify-content space-between
		max-width 571px
		width 100%

	&__input
		width 100%
		height 35px
		font-weight $weight-regular
		color rgba($color-font-title ,0.80)
		line-height 35px
		text-align left
		border none
		outline none
		padding 0 15px
		margin-bottom 20px
		font-size 16px

		@media $sm-up // responsivity zoom hack (iOS 9+)
			font-size 13px

		@media $screen-xs-max
			max-width 100%

	&__button
		max-width 571px
		width 100%
		height 43px
		background-color $color-bg-contact-button
		border none
		outline none
		font-size 16px
		line-height 42px
		color white
		transition background-color 0.2s ease-in-out

		&:hover
			background-color rgba($color-bg-contact-button, .90)

	&__contact-us
		font-size 15px
		color white
		margin 40px 0 20px

		@media $sm-up
			margin 40px 0

	&__email
		font-size 20px
		text-decoration none
		color $color-header-button
		text-shadow 0 0 2px rgba(black, .4)
		border-bottom solid 1px transparent
		transition border 0.3s ease-in-out

		&:hover
			border-bottom solid 1px $color-header-button

	&__picture
		position absolute
		right 0
		bottom 0

		@media screen and (max-width 87.5em)
			display none
