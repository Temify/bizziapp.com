.header
	width 100%
	flex-grow 1
	background-color $color-header-bg
	background-size cover
	background-position center -20%
	background-repeat no-repeat
	padding-bottom 60px
	position relative

	&--product
		background-color $color-header-bg
		position relative
		background-position center

		&::after
			content ' '
			display block
			position absolute
			left 0
			top 0
			right 0
			bottom 0
			background-color rgba($color-header-product-layer , .8)

	&--container-product
		background-image linear-gradient(to top, rgba(186, 118, 244, 1), rgba(186, 118, 244, 0))
		background-repeat no-repeat
		background-position center bottom
		background-size 90% auto
		position absolute
		height 80%
		bottom 0
		right -5%
		left -5%
		z-index 0

		@media $lg-up
			background-size auto 90%
			max-width 100%

		&::before
			content ''
			display block
			padding-bottom 0
			background-image url('../img/header-product.svg')
			background-repeat no-repeat
			background-position center bottom
			background-size 90% auto
			position absolute
			left 7%
			right 7%
			top 0
			bottom 0

	&__text
		position relative
		z-index 1

	&__tablet
		margin 56px auto 0
		max-width 400px

		img
			display block

		@media $md-up
			max-width 663px

	@media $md-up
		min-height 798px
		height 95vh

	@media $screen-md-max
		background-position 73% 0

	.container
		position relative
		background-size cover

		@media $screen-md-max
			background-position 73% 0

		@media $screen-xs-max
			align-items center

	&__lang-wrap
		//display flex
		display none
		justify-content flex-end
		align-items baseline
		margin-top 14px
		margin-left auto

	&__lang
		font-weight $weight-bold
		font-size 13px
		color white
		text-decoration none
		border-bottom solid 1px transparent
		transition border 0.2s ease-in-out

		&:hover
			border-bottom solid 1px white

		&.active
			font-weight $weight-regular
			font-size 15px

	&__line
		height 12px
		width 1px
		background-color white
		margin 0 8px

	&__wrap
		display flex
		justify-content space-between
		width 100%
		margin 65px 0 98px

		@media $screen-xs-max
			flex-direction column
			align-items center
			margin 50px 0
			height 80px

	&__logo
		width 113px

	&__login-wrap
		width 187.5px
		display flex
		align-items center

	&__login
		width 108px
		height 28px
		font-weight $weight-regular
		font-size 15px
		color white
		display flex
		align-items center
		justify-content center
		text-decoration none
		background-color $color-header-button
		transition background-color 0.2s ease-in-out

		&:hover
			background-color rgba($color-header-button, .90)

	&__product-link
		margin-right 25px
		font-weight $weight-regular
		font-size 15px
		color white
		text-decoration none
		border-bottom solid 1px transparent
		transition border 0.2s ease-in-out

		&:hover
			border-bottom solid 1px white

	&__title
		max-width 505px
		font-weight $weight-bold
		font-size 58px
		color white
		line-height 70px
		margin-top 0
		margin-bottom 28px

		../--product &
			width 100%
			text-align center
			margin 0 auto 28px

		@media $screen-xs-max
			max-width 100%
			text-align center
			font-size 34px
			line-height 50px

	&__description
		max-width 424px
		width 100%
		font-weight $weight-light
		font-size 20px
		color white
		line-height 28px
		letter-spacing 0.8px
		margin-bottom 28px

		@media $screen-xs-max
			margin-left auto
			margin-right auto
			text-align center
			margin-bottom 60px

	&__subscription
		@media $screen-xs-max
			text-align center

	&__email
		margin-bottom 7px
		max-width 376px
		width 100%
		height 35px
		background-color rgba(white, 0.92)
		border 1px solid white
		font-weight $weight-regular
		font-size 13px
		color rgba($color-font-title, 0.80)
		line-height 35px
		padding-left 15px
		outline none

	&__send
		background-color $color-header-button-send
		border 1px solid #65cce4
		max-width 376px
		width 100%
		height 35px
		font-weight $weight-light
		font-size 16px
		color white
		outline none
		transition background-color 0.2s ease-in-out

		&:hover
			background-color rgba($color-header-button-send, .80)
